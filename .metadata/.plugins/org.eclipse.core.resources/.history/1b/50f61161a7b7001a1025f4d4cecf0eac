		  <footer class="footer" style="margin-right:-30px;padding-bottom:-310px;">
	 <div th:include="fragments/homefooter :: footer"></div>
		  </footer>
	


<script type="text/javascript">

$(document).ready(function(){

   
   

	 $('#myForm').on('submit', function (e) {
      	 var form = $('#myForm')[0];
      	$('#ajaxLoader').show();
           var data = new FormData(form);
        e.preventDefault();

        $.ajax({
      	  url: '/employee-service/saveEmployee',
      	  type: "post",
      	  cache:false,
            enctype: 'multipart/form-data',
            data: data,
     
            // prevent jQuery from automatically transforming the data into a query string
            processData: false,
            contentType: false,
            cache: false,
            timeout: 1000000,
          success: function (data) {
        		runNotify({
                    type: 'notify',
                    message: 'Employee saved successfuly!'+data.code ,
                    levelMessage: 'success'
                    });
        		reset();
        		$('#ajaxLoader').hide();
        		
          },
          error:function(){
        		runNotify({
                    type: 'notify',
                    message: 'Failed to save new employee!',
                    levelMessage: 'error'
                    });
        		$('#ajaxLoader').hide();
          }
        });

      });
    
    
    
  });


  
  
  

function reset(){
  	 
	$('#code').val("");
	$('#lastname').val("");
	$("#firstname").val("");
	$("#sex").prop("checked") ? true : false;
	$("#dateBirth").val("");
	$("#placeBirth").val("");
    $("#citizenship").val("");
	$("#preview").val("");
	$("#maritalStatus").prop("checked") ? true : false;
	$("#email").val("");
	$("#phone").val("");

	$("#fonction").val("");
	$("#department").val("");
	$("#type").val("");
	$("#identification").val("");


	$("#adress_id").val("");
	$("#city").val("");
$("#street").val("");
$("#number").val("");

$("#salary_id").val("");
$("#net_salary").val("");
$("#gross_salary").val("");
$("#taux").val("");




		}

</script>
</body>
</html>


		
		
	
	
